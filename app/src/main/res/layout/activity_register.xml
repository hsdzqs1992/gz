<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhuye.machine.engineer.activity.login.RegisterActivity">

    <RelativeLayout
        android:id="@+id/layout_title_psd"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/colorBlue">

        <ImageView
            android:id="@+id/iv_register_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="@color/colorWrite"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_title_psd"
        android:background="@color/colorWrite"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="21dp"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/colorMiddleTitle"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="+86"
                android:textColor="@color/colorMiddleTitle"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_register_tel"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="11dp"
                android:background="@null"
                android:hint="手机号码"
                android:maxLength="11"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColor="@color/colorBigTitle"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorSmallTitle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="验证码"
            android:textColor="@color/colorMiddleTitle"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_register_code"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="短信验证码"
                android:inputType="number"
                android:textColor="@color/colorBigTitle"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_register_code"
                android:layout_width="100dp"
                android:layout_height="37dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/shape_code_btn_bg"
                android:text="获取验证码"
                android:textColor="@color/colorWrite"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_title_psd"
        android:background="@color/colorWrite"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="21dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录密码"
            android:textColor="@color/colorMiddleTitle"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edt_register_psd"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:hint="请输入登录密码"
            android:inputType="numberPassword"
            android:textColor="@color/colorBigTitle"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorSmallTitle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="确认登录密码"
            android:textColor="@color/colorMiddleTitle"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edt_register_psd_again"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:hint="请再次输入登录密码"
            android:inputType="numberPassword"
            android:textColor="@color/colorBigTitle"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorSmallTitle" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_register_next_finish"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_login_btn_background"
        android:text="下一步"
        android:textColor="@color/colorWrite"
        android:textSize="15sp" />
</RelativeLayout>
