<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:background="@color/colorView"
        android:layout_above="@+id/btn_cancle"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fa_dong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_dong_fa"
                android:gravity="center"
                android:text="动态"
                android:textColor="@color/colorSmallTitle"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_fa_dai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_daiban_fa"
                android:gravity="center"
                android:text="代班"
                android:textColor="@color/colorSmallTitle"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_fa_find_job"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_find_job"
                android:gravity="center"
                android:text="求职"
                android:textColor="@color/colorSmallTitle"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fa_job"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_job"
                android:gravity="center"
                android:text="招聘"
                android:textColor="@color/colorSmallTitle"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_fa_cent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_cent"
                android:gravity="center"
                android:text="出租"
                android:textColor="@color/colorSmallTitle"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_fa_cent_require"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_cent_require"
                android:gravity="center"
                android:text="求租"
                android:textColor="@color/colorSmallTitle"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_cancle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/colorWrite"
        android:textSize="16sp" />

</RelativeLayout>